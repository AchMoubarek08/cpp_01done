CC = c++ -Wall -Wextra -Werror -std=c++98 -g -o Weapon 

SRC = main.cpp Weapon.cpp HumanA.cpp HumanB.cpp

NAME = Weapon

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(SRC)

clean:
	rm -f $(NAME) 

fclean: clean	
	rm -f $(NAME) 

re : fclean all
		@rm -r *.dSYM